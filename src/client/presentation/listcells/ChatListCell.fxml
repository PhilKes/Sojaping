<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<BorderPane fx:id="borderPane" prefWidth="270.0" xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <Label fx:id="labelSender" text="labelSender" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <BorderPane.margin>
             <Insets right="10.0"/>
         </BorderPane.margin>
      </Label>
   </left>
   <center>
       <TextFlow fx:id="textFlow" BorderPane.alignment="CENTER_LEFT"/>
   </center>
   <right>
      <Label fx:id="labelTime" text="labelTime" textAlignment="RIGHT" BorderPane.alignment="CENTER">
         <font>
            <Font size="9.0" />
         </font>
      </Label>
   </right>
</BorderPane>
